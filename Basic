#include <stdio.h>
#include <math.h>

int main() {
    
    printf("\n*** Welcome Please Choose Any One Option ***    \n");
    
    printf("\n[A] Press 1 to Add  \n ");
    printf("\n[B] Press 2 to Subtract \n");
    printf("\n[C] Press 3 to Multiply \n");
    printf("\n[D] Press 4 to Divide   \n");
    printf("\n[E] Press 5 to get Remainder    \n");
    printf("\n[F] Press 6 to get Power  \n" );
    printf("\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
    printf("\n[G] Press 7 to Check if Number is  Odd or Even \n ");
    printf("\n[H] Press 8 to Check if Number is  Greater \n ");
    
    printf("\nPlease Select Your Option: " );
    int x;
    int y,z;
    int i,c;
    scanf("%d",&x);
    
   
   
    if (x==1) {
        printf("Enter Two Numbers To Add: ");
        scanf("%d%d",&y,&z);
        printf("%d",y+z);
     
    }
    

    if (x==2) {
        printf("Enter Two Numbers To Subtract: ");
        scanf("%d%d",&y,&z);
        printf("%d",y-z);
    }
    
    if (x==3) {
        printf("Enter Two Numbers To Multiply: ");
        scanf("%d%d",&y,&z);
        printf("%d",y*z);
    }
    
    if (x==4) {
         printf("Enter Two Numbers To Divide: ");
         scanf("%d%d",&y,&z);
         printf("%d",y/z);
        
    }
    if (x==5) {
         printf("Enter Two Numbers to get Remainder: ");
         scanf("%d%d",&y,&z);
         printf("%d",y%z);
        
    }
    
    if (x==6) {
         printf("Enter Two Numbers to get Power: ");
         scanf("%d%d",&y,&z);
         i=pow(y,z);
         printf("%d",i);
        
    }
    
    if (x==7) {
         printf("Enter The Number: ");
         scanf("%d",&i);
        
    if (i%2==0) { printf("Number is Even");}
    else { printf("Number is Odd");}
        
    }
    
     if (x==8) {
         printf("Enter Two Numbers: ");
         scanf("%d%d",&y,&z);
    if (y>z) {printf("%d is Greater than %d",y,z);}
    else if (z>y) {printf("%d is Greater than %d",z,y);}
    }
    
    
  
    
         
        
    
    
    
    return 0;
}
